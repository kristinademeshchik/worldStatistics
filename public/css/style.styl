body
  text-align: center;
  font-family: Arial;

#map
  padding: 20px 20px 0
  display: inline-block
  border:solid black 1px

.country
  stroke: black
  stroke-width: 0.1

g.button:hover
  opacity: 0.75
  cursor: pointer

.tick {
  font-size: 10px
}
.text
  font-size: 14px

.year,
.data
  font-size: 12px

.axis path,
.axis line
  fill: none
  stroke: #000
  shape-rendering: crispEdges

.area
  fill: #286FB7
  opacity 0.3

.line
  fill: none
  stroke: black
  stroke-width: 1px
  opacity 0.3

.country
  cursor: pointer

.dot
  fill: #fff
  stroke: #000
  cursor: pointer

.hover-rect
  fill: #74B8F1

.selected-countries
  opacity: 0.8